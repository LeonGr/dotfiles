#keystate_numlock = enable
#keystate_scrolllock = enable
#keystate_capslock = enable



# Increase volume
"amixer -D default sset Master 1%+"
   XF86AudioRaiseVolume

# Decrease volume
"amixer -D default sset Master 1%-"
   XF86AudioLowerVolume

# Toggle Play/Pause
"playerctl play-pause; SONG=$(playerctl metadata xesam:title); ALBUM=$(playerctl metadata xesam:albumArtist && printf ' - ' && playerctl metadata xesam:album); /usr/bin/notify-send -u low "$SONG" "$ALBUM""
   XF86AudioPlay

# Next Song
"playerctl next"
   XF86AudioNext

# Previous Song
"playerctl previous"
   XF86AudioPrev

#Toggle sound
"amixer set Master toggle"
   XF86AudioMute

#Screenshot
"scrot -e 'mv $f ~/Pictures/Screenshots/'"
    m:0x0 + c:107
    Print 

#Toggle Play/Pause
"togglePlayPause"
    m:0x0 + c:135
    Menu 

#Brightness up
"backlight_control +10"
    m:0x0 + c:233
    XF86MonBrightnessUp 

#Brightness down
"backlight_control -10"
    m:0x0 + c:232
    XF86MonBrightnessDown 

#Remark
"noctrlq"
    m:0x4 + c:24
    Control + q 

#
# End of xbindkeys configuration
